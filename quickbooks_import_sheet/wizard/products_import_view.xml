<odoo>
            <record id="products_import_view_qb" model="ir.ui.view">
            <field name="name">products.import.view.new.view</field>
            <field name="model">products.import</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Import Products">
                    <h2>Select Products file to import</h2>
                    <field name="data_file" placeholder="Choose a file to import..."/>
                    <footer>
                        <button name="import_products_file" string="_Import" type="object" class="btn-primary" />
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_products_import_view_qb" model="ir.actions.act_window">
            <field name="name">Import Products</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">products.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="products_import_view_qb"/>
        </record>
        <menuitem id="quickbooks_products_import_menu" name="Import Products" action = "action_products_import_view_qb" parent="quickbooks_menu_acc" groups="account.group_account_manager"/>
</odoo>