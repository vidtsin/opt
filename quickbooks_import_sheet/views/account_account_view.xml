<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="account_account_inherit_qb">
            <field name="name">account.account.inherited.form.qb</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group[1]/field[@name='deprecated']" position="after">
                    <field name="quickbooks_import" readonly="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="res_partner_inherit_qb">
            <field name="name">res.partner.inherited.form.qb</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='phone']" position="after">
                    <field name="quickbooks_import" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_template_inherit_qb">
            <field name="name">product.template.inherited.form.qb</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="quickbooks_import"  invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_product_inherit_qb">
            <field name="name">product.product.inherited.form.qb</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lst_price']" position="after">
                    <field name="quickbooks_import"  invisible="1"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="account_invoice_inherit_qb">
            <field name="name">account.invoice.inherited.form.qb</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_invoice']" position="after">
                    <field name="quickbooks_import_invoice" invisible="1"/>

                </xpath>
                 <xpath expr="//field/tree/field[@name='price_subtotal']" position="after">
                    <field name="quickbooks_import_invoice_line" invisible="1"/>

                </xpath>
            </field>
        </record>

