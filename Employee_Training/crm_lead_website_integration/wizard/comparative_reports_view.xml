<odoo>
    <data>
     <record id="report_comparative_wizard_form_view" model="ir.ui.view">
            <field name="name">crm.comparative.report.wizard.form</field>
            <field name="model">crm.comparative.report.wizard</field>
            <field name="arch" type="xml">
             <form string="Comparative Report Details" >
                 <sheet>
                     <group>
                         <field name="first_month"/>
                         <field name="first_year"/>
                         <field name="second_month"/>
                         <field name="second_year"/>
                     </group>
                     <footer>
                         <button string="Generate Report" name="generate_report" type="object"  attrs="{'invisible': ['|','|','|',('first_month', '=', False),('first_year', '=', False),('second_month', '=', False),('second_year', '=', False)]}" />
                     </footer>
                 </sheet>
             </form>
            </field>
     </record>


        <record id="report_comparative_wizard_action" model="ir.actions.act_window">
            <field name="name">Comparative Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.comparative.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    <menuitem id="report_comparative_wizard_menu" action="report_comparative_wizard_action" name="Comparative Report" parent="sales_team.menu_sale_report" sequence="54"/>
    </data>
</odoo>