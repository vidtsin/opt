<odoo>
    <data>

        <record id="filing_tree_view" model="ir.ui.view">
            <field name="name">filing tree view</field>
            <field name="model">new.filing.settings</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="hst_filing_monthly"/>
                    <field name="hst_filing_quarterly"/>
                    <field name="hst_filing_annually"/>
                    <field name="payroll_filing_monthly"/>
                    <field name="payroll_filing_quarterly"/>
                    <field name="payroll_filing_annually"/>
                </tree>
            </field>
        </record>

        <record id="filing_form_view" model="ir.ui.view">
            <field name="name">filing form view</field>
            <field name="model">new.filing.settings</field>
            <field name="arch" type="xml">
                <form create="false" edit="true">
                    <sheet>
                        <group string="Activity Information">
                            <group>
                                <field name="hst_filing_monthly"/>
                                <field name="payroll_filing_monthly"/>
                            </group>
                            <group>
                                <field name="hst_filing_quarterly"/>
                                <field name="payroll_filing_quarterly"/>
                            </group>
                            <group>
                                <field name="hst_filing_annually"/>
                                <field name="payroll_filing_annually"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="hst_payroll_settings_action" model="ir.actions.act_window">
            <field name="name">Hst Payroll Demo</field>
            <field name="res_model">new.filing.settings</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                    <p>Only edit the records</p>
            </field>
        </record>


        <menuitem
                id="filing_menu"
                name="Filing Notification"
                action="hst_payroll_settings_action"
                parent="sales_team.menu_sales"
                sequence="10"/>
    </data>
</odoo>