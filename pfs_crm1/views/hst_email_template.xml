<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hst_expiry_email_template" model="mail.template">
            <field name="name">Hst Expiry Notification</field>
            <field name="model_id" ref="base.model_ir_module_module"/>
            <field name="lang">${user.lang}</field>
            <field name="subject">Hst Filing expiry notification </field>
            <field name="body_html"><![CDATA[

            <p>Dear Customer,</p><br/>
            <p>Your Hst Filing is about to Expire.</p>
            <p>The HST Filing Details are as follows:</p>
            <p><strong>Name:--first_name --last_name</strong></p>
            <p><strong>Business Name:--business_name</strong></p>
            <p><strong>Business Number:--business_no</strong></p>
            <p><strong>Hst Filing Date:--hst_date</strong></p>
            <p><strong>Hst Filing Frequency:--hst_frequency</strong></p><br/><br/>
            <p>Please Renew it as soon as possible.</p>
            <p>Thank You,</p>

             ]]>
            </field>
        </record>
    </data>
</odoo>