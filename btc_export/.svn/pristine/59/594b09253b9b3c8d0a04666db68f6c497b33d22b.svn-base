<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--add fields in lead view-->
        <record id="view_info_inherit_form" model="ir.ui.view">
            <field name="name">crm.lead.inherit.form.</field>
            <field name="model">crm.lead</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="before">
                        <field name="app_id"/>
                        <field name="form_no"/>
                </xpath>
                     <xpath expr="//field[@name='partner_name']" position="replace">
                     <field name="partner_name" string="Company Name" invisible="1"/>
                </xpath>

                <xpath expr="//button[@name='%(crm.action_crm_lead2opportunity_partner)d']" position="after">
                        <button string="Mark Lost"  type="object" name="lost_lead" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,lost" readonly="1"/>


                        </xpath>

                <!--<xpath expr="//field[@name='user_id']" position="before">-->
                        <!--&lt;!&ndash;<field name="program"/>&ndash;&gt;-->
                        <!--<field name="x_dob"/>-->
                <!--</xpath>-->

                <xpath expr="//field[@name='fax']" position="after">
                        <field name="prospect_id"/>
                </xpath>

                 <xpath expr="//field[@name='priority']" position="before">
                         <field name="x_program"/>
                         <!--<field name="program_id"/>-->
                </xpath>



                 <xpath expr="//page[@name='extra']" position="after">
                     <page name="comment" string="Comments History">
                            <field name="comment" placeholder="Comments and History..."/>
                     </page>
                 </xpath>


                <xpath expr="//page[@name='extra']" position="after">
                     <page name="" string="Next Activity" attrs="{'invisible': [('type', '!=', 'lead')]}">
                         <group>
                            <group>
                                    <label for="next_activity_id"/>
                                    <div>
                                        <div class="o_row mr16">
                                            <field name="next_activity_id"
                                                   options="{'no_create': True, 'no_open': True}"
                                                   domain="['|',('team_id','=',False),('team_id','=',team_id)]"/>
                                            <span class="oe_form_field"
                                                  attrs="{'invisible': ['|', ('next_activity_id', '=', False), ('date_action', '=', False)]}">&#160;on&#160;</span>
                                            <field name="date_action" attrs="{'invisible': [('next_activity_id', '=', False)]}" placeholder="Choose a date..."/>
                                        </div>
                                        <div>
                                            <field name="title_action" placeholder="e.g. Discuss proposal"
                                               attrs="{'invisible': [('next_activity_id', '=', False)]}"/>
                                        </div>
                                    </div>
                                    <field name="date_deadline"/>
                            </group>
                            <group>
                            </group>
                        </group>
                     </page>
                 </xpath>
            </field>
        </record>


