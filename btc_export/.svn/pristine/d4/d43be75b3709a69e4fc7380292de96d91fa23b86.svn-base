        <!--fields changes in tree view-->
        <record model="ir.ui.view" id="crm_tree_view_inherited_123">
                 <field name="name">crm.lead.tree</field>
                 <field name="model">crm.lead</field>
                 <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
                 <field name="arch" type="xml">
                     <xpath expr="//field[@name = 'phone']" position="after">
                            <field name="x_program"/>
                     </xpath>

                      <xpath expr="//field[@name='city']" position="attributes">
                            <attribute name="invisible">1</attribute>
                      </xpath>


                      <xpath expr="//field[@name='name']" position="attributes">
                            <attribute name="invisible">1</attribute>
                      </xpath>

                     <xpath expr="//field[@name = 'create_date']" position="after">
                            <field name="source_id"/>
                     </xpath>
                 </field>
          </record>


           <record model="ir.ui.view" id="x_programs_form_view">
                <field name="name">form.x.programs.form.view</field>
                <field name="model">x_programs</field>
                <field name="arch" type="xml">
                    <form string="Program">
                        <group>
                            <group>
                                <field name="x_Domestic"/>
                                <field name="x_name" required="1"/>
                            </group>
                            <group>
                                <field name="x_international"/>
                            </group>
                        </group>
                    </form>
                </field>
        </record>


        <record model="ir.ui.view" id="x_programs_tree_view">
            <field name="name">form.x.programs.tree.view</field>
            <field name="model">x_programs</field>
            <field name="arch" type="xml">
                <tree string="Program">
                        <field name="x_Domestic"/>
                        <field name="x_name" required="1"/>
                        <field name="x_international"/>
                </tree>
            </field>
        </record>



        <record id="action_x_programs" model="ir.actions.act_window">
            <field name="name">Program</field>
            <field name="res_model">x_programs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>



