<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="view_wizard_btc_mail_messages_import">
            <field name="name">wizard.btc.mail.messages.form</field>
            <field name="model">btc.mail.messages</field>
            <field name="arch" type="xml">
                <form string="Import Messages">
                        <footer>
                            <button string="Import" type="object" name="import_mail_messages"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_wizard_btc_ir_attach"
                    name="Import Messages"
                    res_model="btc.mail.messages"
                    src_model="mail.message"
                    view_mode="form"
                    view_type="form"
                    multi="True"
                    target="new"
                    key2="client_action_multi"/>

</odoo>

