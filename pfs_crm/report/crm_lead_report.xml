<odoo>
    <data>
        <record id="crm_lead_report_tree_view" model="ir.ui.view">
            <field name="name">crm.lead.report.tree.view</field>
            <field name="model">crm.lead.report</field>
            <field name="arch" type="xml">
                <tree>
                     <field name="product_id"/>
                    <field name="user_id"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="country_id"/>

                </tree>
            </field>
        </record>
        <record id="crm_lead_report_form_view" model="ir.ui.view">
            <field name="name">crm.lead.report.form.view</field>
            <field name="model">crm.lead.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="user_id"/>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Generate Report" name="generate_report" type="object"  class="oe_highlight btn-group button"/>,
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="crm_lead_report_action" model="ir.actions.act_window">
            <field name="name">Lead Report</field>
            <field name="res_model">crm.lead.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="crm_lead_report_menu" name="Lead Report"
                  parent="sales_team.menu_sale_report" action="crm_lead_report_action" sequence="12"/>
    </data>
</odoo>