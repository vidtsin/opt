<odoo>
    <data>
        <record id="crm_oppo_report_tree_view" model="ir.ui.view">
            <field name="name">crm.oppo.report.tree.view</field>
            <field name="model">crm.oppor.report</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="product_id"/>
                    <field name="user_id"/>
                    <field name="city"/>
                    <field name="state_id"/>
                    <field name="country_id"/>

                </tree>
            </field>
        </record>
        <record id="crm_oppo_report_form_view" model="ir.ui.view">
            <field name="name">crm.oppo.report.form.view</field>
            <field name="model">crm.oppor.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="user_id"/>
                                <field name="city"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                            </group>
                        </group>
                        <footer>
                            <button string="Generate Report" name="generate_report" type="object"  class="oe_highlight btn-group button"/>,
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="crm_oppor_report_action" model="ir.actions.act_window">
            <field name="name">Opportunity Report</field>
            <field name="res_model">crm.oppor.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="crm_oppor_report_menu" name="Opportunity Report"
                  parent="sales_team.menu_sale_report" action="crm_oppor_report_action" sequence="13"/>
    </data>
</odoo>