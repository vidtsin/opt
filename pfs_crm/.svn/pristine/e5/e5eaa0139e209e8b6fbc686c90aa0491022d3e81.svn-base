<odoo>
    <data>

        <record id="crm_activity_tree_view" model="ir.ui.view">
            <field name="name">crm tree view</field>
            <field name="model">pfs.crm.activites</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lead" invisible="1"/>
                    <field name="activity" />
                    <!--<field name="activity_date" />-->
                    <field name="email"/>
                    <field name="h_filing"/>
                    <field name="h_filing_date"/>
                    <field name="p_filing"/>
                    <field name="p_filing_date"/>
                </tree>
            </field>
        </record>

        <record id="crm_activity_form_view" model="ir.ui.view">
            <field name="name">crm form view</field>
            <field name="model">pfs.crm.activites</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="delete_records" type="object" string="Send Email" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group string="Activity Information">
                            <group>
                                <field name="lead"/>
                                <field name="activity" />
                                <!--<field name="activity_date"/>-->
                            </group>
                            <group>
                                <field name="h_filing"/>
                                <field name="h_filing_date"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="p_filing"/>
                                <field name="p_filing_date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="crm_activities_action" model="ir.actions.act_window">
            <field name="name">CRM ACTIVITIES</field>
            <field name="res_model">pfs.crm.activites</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to  create class records
                </p></field>
        </record>


        <menuitem
                id="menu_crm_opportunities"
                name="CRM Activities"
                action="crm_activities_action"
                parent="sales_team.menu_sales"
                sequence="7"/>
    </data>
</odoo>