<odoo>
    <data>


     <record id="display_product_form_view" model="ir.ui.view">
            <field name="name">Product Display Form</field>
            <field name="model">product.display</field>
            <!--<field name="inherit_id" ref="crm.crm_case_form_view_leads"/>-->
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="product_id"/>
                            <field name="product_name_id"/>
                            <field name="product_check"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="display_product_class_action" model="ir.actions.act_window">
            <field name="name">Product Display</field>
            <field name="res_model">product.display</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <!--<field name="view_id" ref="view_book_tour"/>-->
        </record>
    </data>

</odoo>
