<odoo>
    <data>

        <record id="sin_tree_view" model="ir.ui.view">
            <field name="name">sin tree view</field>
            <field name="model">sin.schedular.setting</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="lead_id"/>
                    <!--<field name="sin_last_name"/>-->
                    <!--<field name="sin_primary_email"/>-->
                    <!--<field name="sin_no"/>-->
                    <field name="date"/>
                </tree>
            </field>
        </record>

        <record id="sin_form_view" model="ir.ui.view">
            <field name="name">sin form view</field>
            <field name="model">sin.schedular.setting</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <group string="Sin Schedular">
                            <group>

                                <field name="lead_id"/>
                                <!--<field name="sin_last_name"/>-->
                                <!--<field name="sin_primary_email"/>-->
                                <!--<field name="sin_no"/>-->
                                <field name="date"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>



        <record id="sin_schedular_settings_action" model="ir.actions.act_window">
            <field name="name">Sin Demo</field>
            <field name="res_model">sin.schedular.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                    <p>Only edit the records</p>
            </field>
        </record>


        <menuitem
                id="sin_menu"
                name="Sin Notification"
                action="sin_schedular_settings_action"
                parent="sales_team.menu_sales"
                sequence="10"/>
    </data>
</odoo>