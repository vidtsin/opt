<odoo>
    <data>
        <record id="crm_campaign_mail_tree_view" model="ir.ui.view">
            <field name="name">crm.campaign.mail.tree view</field>
            <field name="model">crm.campaign.mail</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="leads_ids" />
                    <field name="recipents" invisible="1"/>
                    <field name="subject" />


                </tree>
            </field>
        </record>

        <record id="crm_campaign_mail_form_view" model="ir.ui.view">
            <field name="name">crm.campaign.mail.form view</field>
            <field name="model">crm.campaign.mail</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>

                            <group>

                                <field name="leads_ids" widget="many2many_tags"  options="{'no_create_edit': True,'no_create':True}" />
                                <field name="recipents" invisible="1"/>
                                <field name="subject" />
                               <field name="body" />
                               <field name="date" invisible="1" />

                            </group>
                        <footer>
                        <button string="Email Send" name="newsletter_send_mail" type="object"  class="oe_highlight btn-group button"/>
                    </footer>


                    </sheet>
                </form>
            </field>
        </record>



        <record id="crm_campaign_mail_action" model="ir.actions.act_window">
            <field name="name">Newsletter Campaign</field>
            <field name="res_model">crm.campaign.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="help" type="html">
                    <p>Create Newsletter Campaign </p>
            </field>
        </record>


        <menuitem id="crm_campaign_mail"  sequence="1" action="crm_campaign_mail_action" parent="crm.menu_sale_market" name="Newsletter Campaign"/>
       <!--<menuitem id="crm.menu_sale_market"  sequence="6"  parent="sales_team.menu_base_partner" name="Market"/>-->
    </data>
</odoo>
