<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_myallocator_config_tree" model="ir.ui.view">
        <field name="name">myallocator.config.tree</field>
        <field name="model">myallocator.config</field>
        <field name="arch" type="xml">
            <tree string="Configuration">
                <field name="name" />
                <field name="usertoken" />
                <field name="vendor_id"/>
            </tree>
        </field>
        </record>
        <record id="view_myallocator_config_form" model="ir.ui.view">
            <field name="name">myallocator.config.form</field>
            <field name="model">myallocator.config</field>
            <field name="arch" type="xml">
                <form string="MyAllocator Configuration">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="usertoken" required="1"/>
                            </group>
                            <group>
                                <field name="vendor_id" required="1"/>
                                <field name="vendorpwd" required="1" password="True"/>
                            </group>
                        </group>
                        <button name="create_channel_list" string="Get Channel List" type="object" class="btn-primary" /><br/>
                        <field name="my_channel_ids" >
                            <tree string="Channel List">
                                <field name="name" />
                                <field name="channel_id" />
                            </tree>
                        </field>
                        
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_myallocator_config" model="ir.actions.act_window">
            <field name="name">MyAllocator</field>
            <field name="res_model">myallocator.config</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_myallocator_config_tree"/>
        </record>


        <menuitem action="action_myallocator_config" id="menu_myallocator_config_form" parent="sales_team.menu_sale_config"/>
        </data>
    </odoo>