<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!-- Register Payment Form (old Pay Invoice wizard) -->
        <record model="ir.ui.view" id="view_vendor_receipt_peach_form">
            <field name="name">account.voucher.receipt.dialog.form1</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//footer" position="inside">
                    <button name="checkout_status" string="Validate Transaction" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='communication']" position="after">
                    <field name="create_tran" />
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_vendor_receipt_form">
            <field name="name">account.voucher.receipt.dialog.form1</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">

                    <button name="checkout_status" string="Validate Transaction" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='communication']" position="after">
                    <field name="create_tran" />
                </xpath>
            </field>
        </record>



        <record id="view_order_form_inherited" model="ir.ui.view">
            <field name="name">account.invoice.form.auth</field>
            <field name="model">account.invoice</field>
             <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Peach Payments" >
                        <group>
                            <group>
                                <field name="checkout_id" readonly="1"/>
                                    <field name="payment_desc" readonly="1"/>
                                    <field name="is_success" readonly="1"/>
                                    <field name="is_fail" readonly="1"/>
                            </group>
                            <group>
                                    <field name="payment_brand" readonly="1"/>
                                    <field name="cardlastdigit" readonly="1"/>
                                    <field name="descriptor" readonly="1"/>
                            </group>
                        </group>
                        </page>
                </xpath>
            </field>
        </record>

         <record id="peach_sale_view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.sattlement</field>
            <field name="model">sale.order</field>
             <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Peach Payments" >
                        <group>
                            <group>
                                <field name="checkout_id" readonly="1"/>
                                    <field name="payment_desc" readonly="1"/>
                                    <field name="is_success" readonly="1"/>
                                    <field name="is_fail" readonly="1"/>
                            </group>
                            <group>
                                    <field name="payment_brand" readonly="1"/>
                                    <field name="cardlastdigit" readonly="1"/>
                                    <field name="descriptor" readonly="1"/>
                            </group>
                        </group>
                        </page>
                </xpath>

            </field>
        </record>
    </data>
</openerp>