<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="view_check_in_room_tree" model="ir.ui.view">
            <field name="name">check.room.tree</field>
            <field name="model">check.room</field>
            <field name="arch" type="xml">
                <tree string="Check In form">
                    <field name="name" />
                </tree>
            </field>
        </record>
        
        
	<record id="view_check_in_room_form" model="ir.ui.view">
            <field name="name">check.room.form</field>
            <field name="model">check.room</field>
            <field name="arch" type="xml">
                <form string="Check In form">
                    <sheet>
                        <group>
                            <field name="name" />
                            <!--<field name="email" />-->
                        </group>
                        
                        <field name="check_in_room_ids" widget="one2many_list">
                            <tree string="Check In form" editable="bottom">
                                <field name="product_id"/>
                                <field name="partner_id"/>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="mobile"/>
                                <field name="id_passport"/>
                            </tree>
                        </field>
                    
                    </sheet>
                </form>
            </field>
        </record>
        
        
        <record id="action_check_in_room" model="ir.actions.act_window">
            <field name="name">Check In form</field>
            <field name="res_model">check.room</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_check_in_room_tree"/>
        </record>
                              
    </data>
</odoo>