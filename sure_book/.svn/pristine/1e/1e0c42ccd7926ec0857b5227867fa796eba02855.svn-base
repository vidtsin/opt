<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_myallocator_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="check_in" />
                    <field name="room_no" />
                    <field name="room_id" />
                    <field name="id_passport" />
                </xpath>
            </field>
        </record>
        
        
        
        <!--_________________________________Sale Order Form__________________________________________-->
        
        
        <record id="view_order_form_allocator" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                    <header>
                        <button name="action_quotation_send" string="Send by Email" type="object" states="draft" class="btn-primary"/>
                        <button name="print_quotation" string="Print" type="object" states="draft" class="btn-primary"/>
                        <button name="action_confirm" states="sent" string="Check-In" class="btn-primary o_sale_confirm" type="object" />
                        <button name="action_confirm" states="draft" string="Check-In" class="o_sale_confirm" type="object" />
                        <button name="print_quotation" string="Print" type="object" states="sent,sale"/>
                        <button name="action_quotation_send" string="Send by Email" type="object" states="sent,sale"/>
    <!--                    <button name="create_booking" string="Book Rooms" type="object" invisible="1" class="btn-primary" />
                        <button name="action_check_out" states="sale" string="Check-Out" invisible="1" type="object" class="btn-primary" />-->
                        <button name="merge_invoices" states="sale" string="Check-Out" type="object" class="btn-primary" />
                        <button name="split_invoices" states="sale" string="Split Bill" type="object" class="btn-primary" />
                        <button name="action_cancel" states="draft,sent,sale" type="object" string="Cancel"/>
                        <button name="action_draft" states="cancel" type="object" string="Set to Quotation"/>
                        <button name="action_done" type="object" string="Lock" states="sale"
                            help="If the sale is locked, you can not modify it anymore. However, you will still be able to invoice or deliver."/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,sent,sale,check_out"/>
                    </header>
                </xpath>
                
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="room_booking_id" />
                    <field name="start_date" />
                    <field name="end_date" />
                    <field name="property_id"  domain="[('is_property_created', '=', True)]" />
                    <field name="room_id" domain="[('my_property_id', '=', property_id)]"/>
                    <field name="channel_id"/>
                </xpath>


                <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                    <field name="is_available" invisible="1"/>
                    <field name="is_room" invisible="1"/>
                    <field name="current_date" />
                    <field name="is_activities" invisible="1"/>
                    <field name="is_transport" invisible="1"/>
                    <field name="property_id" invisible="1"/>
                    <field name="start_date" attrs="{'invisible': [('is_room', '!=', True)]}"/>
                    <field name="end_date" attrs="{'invisible': [('is_room', '!=', True)]}"/>
                    <field name="activities" attrs="{'invisible': [('is_activities', '=', False) , ('is_transport', '=', False)]}"/>
                    <field name="partner_ids" widget="many2many_tags"/>
                    <!--<field name="res_partner_id" />-->
                </xpath>
                    
                <xpath expr="//notebook" position="inside">
                    <page string="Note">
                        <group>
                            <field name="new_current_date" />
                            <group>
                                <field name="is_book" />
                                <field name="book_id" readonly="1" attrs="{'invisible': [('is_book', '!=', True )]}"/>
                                <field name="allocator_id" readonly="1" attrs="{'invisible': [('is_book', '!=', True )]}"/>
                            </group>
                        </group>
                        <field name="descrip" />
                    </page>
                </xpath> 
                    
            </field>
        </record>
        
        
<!--        <record id="sale.view_order_form" model="ir.ui.view">
