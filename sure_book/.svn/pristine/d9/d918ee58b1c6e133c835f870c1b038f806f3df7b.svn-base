<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        
        <record id="view_myallocator_room_product_variant_form" model="ir.ui.view">
            <field name="name">myallocator.room.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Rooms Variant" attrs="{'invisible': [('is_room', '!=', True )]}">
                        <field name="room_variant_ids" widget="one2many_list">
                            <tree string="Rooms new">
                               <field name="property_id" required="1"/>
                               <field name="room_id" readonly="1"/>
                               <field name="product_id" required="1"/>
                               <field name="prod_id" required="1"/>
                               <field name="private_room" required="1"/>
                               <field name="is_dorm" required="1"/>
                               <field name="gender" required="1"/>
                               <field name="occupancy" required="1"/>
                               <field name="unit" required="1"/>
                               <field name="price" required="1"/>

                            </tree>
                        </field>
                    </page>
                    
                </xpath>
            </field>
        </record>
                    
                    
        <record id="view_data_record_form" model="ir.ui.view">
            <field name="name">data.record.form</field>
            <field name="model">data.record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="property_id"/>
                        <field name="res_user_id"/>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="view_data_record_tree" model="ir.ui.view">
            <field name="name">data.record.tree</field>
            <field name="model">data.record</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="property_id"/>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="action_data_record" model="ir.actions.act_window">
            <field name="name">Data Record</field>
            <field name="res_model">data.record</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_data_record_tree"/>
        </record>


                    
                                                            
        <record id="view_myallocator_room_product_form" model="ir.ui.view">
            <field name="name">myallocator.room.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="after">
                    <div name="options_new">
                        <div>
                            <field name="is_room"/>
                            <label for="is_room"/>
                        </div>
                        <div>
                            <field name="is_available"/>
                            <label for="is_available"/>
                        </div>
                        <div>
                            <field name="is_activities"/>
                            <label for="is_activities"/>
                        </div>
                        <div>
                            <field name="is_transport"/>
                            <label for="is_transport"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//page[@name='notes']" position="after">

                <page string="Rooms" attrs="{'invisible': [('is_room', '!=', True )]}">
                    <field name="product_room_ids" widget="one2many_list">
                        <tree string="Rooms new">
                           <field name="property_id" required="1"/>
                           <field name="room_id" readonly="1"/>
                           <field name="product_id" required="1"/>
                           <field name="prod_id" invisible="1"/>
                           <field name="private_room" required="1"/>
                           <field name="is_dorm" required="1"/>
                           <field name="gender" required="1"/>
                           <field name="occupancy" required="1"/>
                           <field name="unit" required="1"/>
                           <field name="price" required="1"/>
                           
                        </tree>
                    </field>
                </page>
                <page string="Activity" attrs="{'invisible': [('is_activities', '!=', True )]}">
                    <field name="product_activity_ids" widget="one2many_list">
                        <tree string="Activity">
                           <field name="property_id" required="1"/>
                           <field name="product_id" required="1"/>
                           <field name="prod_id" required="1"/>
                           <field name="capacity" required="1"/>
                           <field name="price" required="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            </field>
        </record>
        
        
