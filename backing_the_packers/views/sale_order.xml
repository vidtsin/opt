<?xml version="1.0" encoding="utf-8"?>
<odoo>


<record id="view_order_form" model="ir.ui.view">
    <field name="name">backing.the.packers.view_order_form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
    	<xpath expr="//button[@name='action_confirm'][1]" position="attributes">
	    <attribute name="states">checked_in</attribute>
        </xpath>
        <xpath expr="//button[@name='action_confirm']" position="after">
	    <button name="sale_check_in" states="draft,sent" string="Check In" type="object"/>
	</xpath>
	<xpath expr="//button[@name='action_cancel']" position="attributes">
            <attribute name="states">manual,progress,checked_in</attribute>
	</xpath>
	<xpath expr="//field[@name='state']" position="attributes">
	    <attribute name='statusbar_visible'>draft,sent,checked_in,sale,done</attribute>
	</xpath>
        
    </field>
</record>


</odoo>
