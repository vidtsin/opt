        <record id="room_template_kanban_view" model="ir.ui.view">
            <field name="name">Product.template.product.kanban</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="image_small"/>
                    <field name="lst_price"/>
                    <!--<field name="is_product_variant"/>not in 10-->
                    <field name="product_variant_count"/>
                    <field name="product_variant_ids"/>
                    <field name="currency_id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.template', 'image_small', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong>
                                        <span t-if="record.default_code.value">[<field name="default_code"/>]</span>
                                        <field name="name"/>
                                    </strong>
                                    <div t-if="record.product_variant_count.value &gt; 1">
                                        <strong>
                                            <t t-esc="record.product_variant_count.value"/> Variants
                                        </strong>
                                    </div>
                                    <div name="tags"/>
                                    <ul>
                                        <li>Price: <field name="lst_price" widget="monetary"></field></li>
                                    </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="room_template_action" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="room_template_kanban_view"/>
           <field name="context">{"search_default_is_room": 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to define a new Room.
                </p><p>
                    You must define a Room for everything you sell, whether it's a physical product, a consumable or a service you offer to  customers.               
                </p><p>
                    The Room form contains information to simplify the sale process: price, notes in the quotation, accounting data, procurement methods, etc.
                </p>
            </field>
        </record>

