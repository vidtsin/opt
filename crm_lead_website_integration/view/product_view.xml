<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_only_custom_form_view" model="ir.ui.view">
        <field name="name">product.template.product.custom.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            
            <xpath expr="//notebook" position="inside">

                <page name="custom_details" string="Program Details">
                    <group>
                        <group>
                            <field name="admission_requirements"/>
                            <field name="other_requirements"/>
                            <field name="duration_in_weeks"/>
                            <field name="duration_in_hours"/>
                            <field name="class_schedule"/>
                            <field name="program_start_date"/>
                            <field name="deadline_to_apply"/>
                            <field name="scholarship"/>
                        </group>
                        <group string="Fees Details">
                            <field name="tuition_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="texts_book_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="seat_deposit_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="lab_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="lab_supply_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="major_equipment_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                            <field name="professional_exam_fee" widget='monetary' options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </page>

            </xpath>
        </field>
    </record>

    </data>
</odoo>