<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
     <record id="program_details_form" model="ir.ui.view">
            <field name="name">program.details.form</field>
            <field name="model">program.details</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
             <form string="Program Details" >
                 <sheet>
                    <style>
                            .o_form_view .o_horizontal_separator {
                                font-size: 15px;
                                margin: 5px 0;
                                }
                            .o_form_view .o_group .o_td_label .o_form_label{
                             width:180px !important;
                            }
                        </style>
                     <group>
                           <group>
                             <field name="name" required="1"/>
                             <field name="internal_ref"/>
                             <field name="international"/>
                             <field name="domestic"/>
                          
                           </group>


                            <group></group>
                           <group string="Fees Details">
                             <field name="currency_id" invisible="1"/>
                             <field name="tution_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                             <field name="textbook_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                             <field name="seat_deposit_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                             <field name="lab_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                             <field name="lab_supply_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                             <field name="maj_equip_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                             <field name="prof_exam_fee" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                           </group>

                           <group >
                             <field name="other_com_fee" widget="monetary" options="{'currency_field': 'currency_id'}"  attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}" />
                             <field name="opt_fee" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                             <field name="reg_fee" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                             <field name="uniform_fee" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                             <field name="field_trip" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                             <field name="inter_fee" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                             <field name="application_fee" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                             <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'invisible': ['&amp;',('domestic', '=', True),('international','=',False)]}"/>
                           </group>

                           <group string="Program Details">
                             <field name="adm_require"/>
                             <field name="other_require"/>
                             <field name="dur_weeks"/>
                             <field name="dur_hours"/>
                             <field name="schedule"/>
                           </group>
                         
                     </group>
                 </sheet>
             </form>
            </field>
     </record>
     <record id="program_details_tree" model="ir.ui.view">
            <field name="name">program.details.tree</field>
            <field name="model">program.details</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <tree string="Programs">
                     <field name="name" />
                     <field name="internal_ref"/>
                     <field name="start_date"/>
                     <field name="deadline"/>
                     <field name="scholarship"/>
                </tree>
            </field>
     </record>

        <record id="biztec_program_details" model="ir.actions.act_window">
            <field name="name">Program Details</field>
            <field name="res_model">program.details</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>

        </record>

    <menuitem id="progrm_data" action="biztec_program_details" name="Programs" parent="sales_team.menu_sales" sequence="15"/>

        <delete model="ir.ui.menu" id="sale.menu_products" />

    <!--<menuitem id="sale.menu_products" action="product.product_normal_action_sell" parent="sales_team.menu_sales" groups="product.group_product_variant" sequence="99"/>-->

    </data>
</odoo>