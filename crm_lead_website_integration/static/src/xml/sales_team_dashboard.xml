<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!--
        This template is the ribbon at the top of the salesteam dashboard that adds
        some figures to it. We call this rubbon the "SalesDashboard".
    -->
    <t t-name="sales_team.SalesDashboard">
            <div t-if="show_demo or values" class="o_sales_dashboard">
                <div t-attf-class="#{show_demo ? 'o_demo' : ''}" style="width:100%">
                            <table class="table table-condensed">
                                <tbody>
                                    <tr>
                                        <td class="o_text">
                                            <div class="o_highlight">Local Leads</div>
                                        </td>
                                        <td class="o_main" title="To Hot Leads">
                                            <a href="#" class="o_dashboard_action_new" name="crm_lead_website_integration.action_your_local_pipeline" data-extra="local_hot" >
                                                <span class="o_highlight">
                                                    <t t-if="!show_demo">
                                                    <t t-esc="values['local_leads']['hot']"/>
                                                </t>
                                                <t t-if="show_demo">
                                                    0
                                                </t>
                                                </span><br/>
                                                 Hot Leads
                                            </a>
                                        </td>
                                        <td class="o_main" title="To Warm Leads">
                                            <a href="#" class="o_dashboard_action_new" name="crm_lead_website_integration.action_your_local_pipeline" data-extra="local_warm">
                                                <span class="o_highlight">
                                                    <t t-if="!show_demo">
                                                        <t t-esc="values['local_leads']['warm']"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                Warm Leads
                                            </a>
                                        </td>
                                        <td class="o_main" title="To Cold Leads">
                                            <a href="#" class="o_dashboard_action_new" name="crm_lead_website_integration.action_your_local_pipeline" data-extra="local_cold">
                                                <span class="o_highlight">
                                                    <t t-if="!show_demo">
                                                        <t t-esc="values['local_leads']['cold']"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                Cold Leads
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="o_text">
                                            <div class="o_highlight">International Leads</div>
                                        </td>
                                        <td class="o_main" title="To Hot Leads">
                                         <a href="#" class="o_dashboard_action_new" name="crm_lead_website_integration.action_your_international_pipeline" data-extra="international_hot" >
                                            <span class="o_highlight">
                                                <t t-if="!show_demo">
                                                        <t t-esc="values['international_leads']['hot']"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                 Hot Leads
                                            </a>
                                        </td>
                                        <td class="o_main" title="To Warm Leads">
                                            <a href="#" class="o_dashboard_action_new" name="crm_lead_website_integration.action_your_international_pipeline" data-extra="international_warm">
                                                <span class="o_highlight">
                                                    <t t-if="!show_demo">
                                                        <t t-esc="values['international_leads']['warm']"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                 Warm Leads
                                            </a>
                                        </td>
                                        <td class="o_main" title="To Cold Leads">
                                            <a href="#" class="o_dashboard_action_new" name="crm_lead_website_integration.action_your_international_pipeline" data-extra="international_cold">
                                                <span class="o_highlight">
                                                    <t t-if="!show_demo">
                                                        <t t-esc="values['international_leads']['cold']"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                Cold Leads
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                    <br></br>
                            <table class="table table-condensed">
                                <tr>
                                        <td class="o_text">
                                            <div class="o_highlight">Pipeline</div>
                                            <div class="o_highlight">(Local)</div>
                                        </td>
                                        <t t-foreach="values['opportunities_local']" t-as="opp">
                                        <td class="o_main" t-att-title="opp">
                                         <a href="#" class="o_dashboard_action_new" t-att-name="values['local']" t-att-data-extra="opp" >
                                            <span class="o_highlight">
                                                <t t-if="!show_demo">
                                                        <t t-esc="opp"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                <span t-esc="opp_value"/>
                                            </a>
                                        </td>
                                        </t>
                                    </tr>
                                    <tr>
                                        <td class="o_text">
                                            <div class="o_highlight">Pipeline</div>
                                            <div class="o_highlight">(International)</div>
                                        </td>
                                        <t t-foreach="values['opportunities_international']" t-as="opp">
                                        <td class="o_main" t-att-title="opp">
                                         <a href="#" class="o_dashboard_action_new" t-att-name="values['international']" t-att-data-extra="opp" >
                                            <span class="o_highlight">
                                                <t t-if="!show_demo">
                                                        <t t-esc="opp"/>
                                                    </t>
                                                    <t t-if="show_demo">
                                                        0
                                                    </t>
                                                </span><br/>
                                                <span t-esc="opp_value"/>
                                            </a>
                                        </td>
                                        </t>
                                    </tr>
                            </table>
                </div>
            </div>
    </t>
</templates>

