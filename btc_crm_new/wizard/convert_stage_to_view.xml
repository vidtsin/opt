        <!--Form view lead to opportunity-->

        <record id="convert_stage_to_Form_view" model="ir.ui.view">
            <field name="name">convert.stage.to.form</field>
            <field name="model">convert.stage.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="crm_id" invisible="1" />
                        <field name="convert_stage" required="1"/>
                    </group>
                    <group name="name" >
                        <field name="name" widget="radio"  attrs="{'invisible': ['|',('convert_stage', '=', 'Delayed'),('convert_stage', '=', 'Dead')]}"/>
                    </group>
                    <group string="Assign this opportunity to" attrs="{'invisible': ['|',('convert_stage', '=', 'Delayed'),('convert_stage', '=', 'Dead')]}">
                        <field name="user_id" domain="[('share', '=', False)]"/>
                        <field name="team_id" widget="selection"/>
                    </group>
                    <group string="Merged With" attrs="{'invisible': ['|','|',('convert_stage', '=', 'Delayed'),('convert_stage', '=', 'Dead'),('name', '!=', 'merge')]}">
                        <field name="lead_name"/>
                        <field name="lead_email"/>
                        <field name="lead_phone"/>
                    </group>
                     <group string="Opportunities" attrs="{'invisible': ['|',('name', '!=', 'merge'),('convert_stage', '!=', 'Opportunity')]}">
                        <field name="opportunity_ids" nolabel="1" >
                                <tree>
                                <field name="create_date"/>
                                <field name="name"/>
                                <field name="type"/>
                                <!--<field name="contact_name"/>-->
                                <field name="country_id" invisible="context.get('invisible_country', True)"/>
                                <field name="email_from"/>
                                <field name="phone"/>
                                <field name="stage_id"/>
                                <field name="user_id"/>
                                <field name="team_id"/>
                            </tree>
                        </field>
                     </group>


                    <footer>
                        <button string="Convert Stage" name="action_apply" type="object"  class="oe_highlight btn-group button"/>
                    </footer>

                </form>
            </field>
        </record>


        <!--Action Window-->


        <record id="convert_stage_to_action" model="ir.actions.act_window">
            <field name="name">Convert Stage</field>
            <field name="res_model">convert.stage.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


