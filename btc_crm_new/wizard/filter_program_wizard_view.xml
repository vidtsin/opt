<odoo>
    <data>
       <record id="crm_case_form_view_program_report" model="ir.ui.view">
            <field name="name">Program</field>
            <field name="model">crm.program.report</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <label for="period_from" string="Period"
                                attrs="{'invisible': ['|',('from_date', '!=', False),('to_date', '!=', False)]}"/>
                                <div>
                                    <field name="number_of_period" class="oe_inline"
                                    attrs="{'invisible': ['|',('from_date', '!=', False),('to_date', '!=', False)]}"/>
                                    <field name="period_from" class="oe_inline"
                                    attrs="{'invisible': ['|',('from_date', '!=', False),('to_date', '!=', False)]}"/>
                                </div>
                                <field name="filter_team_id"/>
                                <field name="filter_program_id"/>
                            </group>
                            <group>
                                <field name="from_date" attrs="{'invisible': [('period_from', '!=', False)]}"/>
                                <field name="to_date" attrs="{'invisible': [('period_from', '!=', False)]}"/>
                            </group>
                        </group>
                        <footer>
                            <button string="View Program" name="view_program" type="object"  class="oe_highlight btn-group button"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="program_report_action" model="ir.actions.act_window">
            <field name="name">Program Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.program.report</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


         <menuitem
                id="crm_program_report"
                name="Program"
                parent="sales_team.menu_sale_report"
                sequence="13"
                action="program_report_action"/>
    </data>
</odoo>