<odoo>
    <data>
     <record id="report_country_wizard_form_view" model="ir.ui.view">
            <field name="name">crm.country.report.wizard.form</field>
            <field name="model">crm.country.report.wizard</field>
            <field name="arch" type="xml">
             <form string="Country Details" >
                 <sheet>
                     <group>
                         <field name="all_country"/>
                         <field name="country" attrs="{'invisible': [('all_country', '=', True)]}"/>
                         <field name="start_date"/>
                         <field name="end_date"/>
                     </group>
                     <footer>
                         <button string="Generate Report" name="generate_report" type="object"  attrs="{'invisible': ['|',('start_date', '=', False),('end_date', '=', False)]}" />
                     </footer>
                 </sheet>
             </form>
            </field>
     </record>


        <record id="report_country_wizard_action" model="ir.actions.act_window">
            <field name="name">Country Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">crm.country.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    <menuitem id="report_country_wizard_menu" action="report_country_wizard_action" name="Country Report" parent="sales_team.menu_sale_report" sequence="52"/>
    </data>
</odoo>